  <script>
    // Enhanced Chat Functionality
    let conversationHistory = [];
    let isAnalyzing = false;

    function startEmotionChat() {
      document.getElementById('emotion-chat-modal').style.display = 'block';
      const input = document.getElementById('emotion-input');
      input.focus();
      
      // Enhanced welcome message if first time
      if (conversationHistory.length === 0) {
        setTimeout(() => {
          addMessageToChat('ai', 'Hello! I\'m EmotiSense Pro, your advanced emotional intelligence companion. I can help you understand your emotions, identify patterns, and provide personalized wellness guidance. How are you feeling today? üåü');
        }, 500);
      }
    }

    function closeEmotionChat() {
      document.getElementById('emotion-chat-modal').style.display = 'none';
      hideEmotionAnalysis();
    }

    function handleInputKeydown(event) {
      if (event.key === 'Enter' && !event.shiftKey) {
        event.preventDefault();
        sendEmotionMessage();
      }
    }

    function quickEmotion(message) {
      document.getElementById('emotion-input').value = message;
      sendEmotionMessage();
    }

    function clearChat() {
      document.getElementById('chat-messages').innerHTML = `
        <div style="color: var(--text-secondary); text-align: center; padding: 3rem 1rem;">
          <div style="font-size: 3rem; margin-bottom: 1rem;">üåå</div>
          <h3 style="color: var(--text-primary); margin-bottom: 1rem;">Chat Cleared</h3>
          <p>Start a new conversation. I'm here to help with your emotional well-being.</p>
        </div>
      `;
      conversationHistory = [];
      hideEmotionAnalysis();
    }

    function sendEmotionMessage() {
      if (isAnalyzing) return;
      
      const input = document.getElementById('emotion-input');
      const message = input.value.trim();
      
      if (!message) return;
      
      setAnalyzingState(true);
      
      // Add user message to chat
      addMessageToChat('user', message);
      conversationHistory.push({ role: 'user', content: message, timestamp: new Date() });
      
      // Clear input
      input.value = '';
      
      // Show analyzing state
      showTypingIndicator();
      addMessageToChat('ai', 'üåå Analyzing your emotional state with advanced AI...', true);
      
      // Send to EmotiSense Pro API
      fetch('/emotisense/chat', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
        },
        body: JSON.stringify({ 
          message: message,
          emotion_context: {
            conversation_length: conversationHistory.length,
            user_agent: navigator.userAgent,
            timestamp: new Date().toISOString()
          }
        })
      })
      .then(response => response.json())
      .then(data => {
        setAnalyzingState(false);
        hideTypingIndicator();
        
        // Remove loading message
        removeLastMessage();
        
        // Add AI response
        const aiMessage = data.message || data.response || 'I apologize, but I encountered an issue processing your message. Please try again.';
        addMessageToChat('ai', aiMessage);
        conversationHistory.push({ role: 'assistant', content: aiMessage, timestamp: new Date() });
        
        // Show comprehensive emotion analysis
        if (data.emotion_analysis) {
          showAdvancedEmotionAnalysis(data.emotion_analysis, data.therapeutic_insights, data.wellness_recommendations);
        }
        
        // Update UI with emotion-based effects
        if (data.ui_triggers) {
          applyEmotionUIEffects(data.ui_triggers);
        }
        
        // Update stats
        updateEmotionStats();
      })
      .catch(error => {
        console.error('EmotiSense Pro API Error:', error);
        setAnalyzingState(false);
        hideTypingIndicator();
        removeLastMessage();
        
        addMessageToChat('ai', '‚ùå I\'m experiencing technical difficulties. Your emotional well-being is important - please try again or consider reaching out to a mental health professional if you need immediate support.');
      });
    }

    function setAnalyzingState(analyzing) {
      isAnalyzing = analyzing;
      const button = document.getElementById('analyze-button');
      if (analyzing) {
        button.textContent = 'Analyzing...';
        button.style.opacity = '0.7';
        button.style.cursor = 'not-allowed';
      } else {
        button.textContent = 'Analyze';
        button.style.opacity = '1';
        button.style.cursor = 'pointer';
      }
    }

    function showTypingIndicator() {
      document.getElementById('typing-indicator').style.display = 'block';
    }

    function hideTypingIndicator() {
      document.getElementById('typing-indicator').style.display = 'none';
    }

    function addMessageToChat(sender, message, isLoading = false) {
      const messagesDiv = document.getElementById('chat-messages');
      const messageDiv = document.createElement('div');
      
      const senderColor = sender === 'user' ? 'var(--emotion-joy)' : 'var(--text-primary)';
      const senderIcon = sender === 'user' ? 'üë§' : 'üåå';
      const bgColor = sender === 'user' ? 'rgba(255, 215, 0, 0.1)' : 'rgba(232, 180, 255, 0.1)';
      
      messageDiv.className = 'chat-message';
      messageDiv.style.cssText = `
        margin-bottom: 1.5rem;
        padding: 1.5rem;
        background: ${bgColor};
        border-radius: 15px;
        border-left: 4px solid ${senderColor};
        ${isLoading ? 'animation: pulse 1.5s ease-in-out infinite;' : ''}
        transition: all 0.3s ease;
      `;
      
      messageDiv.innerHTML = `
        <div style="color: ${senderColor}; font-weight: bold; margin-bottom: 0.8rem; font-size: 1rem; display: flex; align-items: center; gap: 0.5rem;">
          <span style="font-size: 1.2rem;">${senderIcon}</span>
          <span>${sender === 'user' ? 'You' : 'EmotiSense Pro'}</span>
          <span style="margin-left: auto; font-size: 0.8rem; opacity: 0.7;">${new Date().toLocaleTimeString()}</span>
        </div>
        <div style="color: var(--text-secondary); line-height: 1.6; white-space: pre-wrap;">${message}</div>
      `;
      
      messagesDiv.appendChild(messageDiv);
      messagesDiv.scrollTop = messagesDiv.scrollHeight;
    }

    function removeLastMessage() {
      const messagesDiv = document.getElementById('chat-messages');
      const lastMessage = messagesDiv.querySelector('.chat-message:last-child');
      if (lastMessage) {
        lastMessage.remove();
      }
    }

    function showAdvancedEmotionAnalysis(analysis, therapeuticInsights, wellnessRecs) {
      const analysisDiv = document.getElementById('emotion-analysis');
      const resultsDiv = document.getElementById('emotion-results');
      const insightsDiv = document.getElementById('therapeutic-insights');
      const confidenceBadge = document.getElementById('confidence-badge');
      
      // Update confidence badge
      confidenceBadge.textContent = `${analysis.confidence_level}% Confidence`;
      confidenceBadge.style.background = analysis.confidence_level > 80 ? 'var(--emotion-calm)' : 
                                         analysis.confidence_level > 60 ? 'var(--emotion-joy)' : 'var(--emotion-anger)';
      
      // Display emotion analysis results
      resultsDiv.innerHTML = `
        <div style="background: rgba(232, 180, 255, 0.1); padding: 1.5rem; border-radius: 10px;">
          <h5 style="color: var(--text-primary); margin-bottom: 0.8rem;">Primary Emotion</h5>
          <div style="font-size: 1.5rem; color: var(--emotion-love); font-weight: bold;">${analysis.primary_emotion || 'Not detected'}</div>
        </div>
        <div style="background: rgba(255, 215, 0, 0.1); padding: 1.5rem; border-radius: 10px;">
          <h5 style="color: var(--text-primary); margin-bottom: 0.8rem;">Intensity Level</h5>
          <div style="font-size: 1.5rem; color: var(--emotion-joy); font-weight: bold;">${analysis.intensity_score || 'Unknown'}/10</div>
        </div>
        <div style="background: rgba(0, 184, 148, 0.1); padding: 1.5rem; border-radius: 10px;">
          <h5 style="color: var(--text-primary); margin-bottom: 0.8rem;">Emotional Context</h5>
          <div style="color: var(--text-secondary);">${JSON.stringify(analysis.emotional_context || {}, null, 2).replace(/[{}",]/g, '').replace(/\n/g, '<br>')}</div>
        </div>
      `;
      
      // Display therapeutic insights
      if (therapeuticInsights || wellnessRecs) {
        insightsDiv.innerHTML = `
          <h5 style="color: var(--text-primary); margin-bottom: 1rem;">üéØ Personalized Insights & Recommendations</h5>
          <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1rem;">
            ${therapeuticInsights ? `
              <div style="background: rgba(116, 185, 255, 0.1); padding: 1rem; border-radius: 8px;">
                <h6 style="color: var(--emotion-sadness); margin-bottom: 0.5rem;">Therapeutic Approach</h6>
                <p style="font-size: 0.9rem;">${therapeuticInsights.therapeutic_approach || 'Personalized guidance recommended'}</p>
              </div>
            ` : ''}
            ${wellnessRecs && wellnessRecs.length > 0 ? `
              <div style="background: rgba(0, 184, 148, 0.1); padding: 1rem; border-radius: 8px;">
                <h6 style="color: var(--emotion-calm); margin-bottom: 0.5rem;">Wellness Actions</h6>
                <ul style="font-size: 0.9rem; margin-left: 1rem;">
                  ${wellnessRecs.slice(0, 3).map(rec => `<li>${rec}</li>`).join('')}
                </ul>
              </div>
            ` : ''}
          </div>
        `;
      }
      
      analysisDiv.style.display = 'block';
    }

    function hideEmotionAnalysis() {
      document.getElementById('emotion-analysis').style.display = 'none';
    }

    function applyEmotionUIEffects(triggers) {
      // Apply dynamic background color based on emotion
      if (triggers.background_color) {
        document.body.style.filter = `hue-rotate(${Math.random() * 30 - 15}deg)`;
        setTimeout(() => {
          document.body.style.filter = '';
        }, 3000);
      }
    }

    function updateEmotionStats() {
      const countElement = document.getElementById('emotion-count');
      if (countElement) {
        const current = parseInt(countElement.textContent) || 0;
        countElement.textContent = current + 1;
      }
    }

    // Feature card functions
    function startEmotionDetection() {
      startEmotionChat();
    }

    function openSentimentAnalysis() {
      alert('üîú Advanced Sentiment Analysis dashboard coming soon! Use the chat for comprehensive analysis.');
    }

    function startMoodTracking() {
      window.location.href = '/emotisense/mood_journal';
    }

    function openVoiceAnalysis() {
      alert('üîú Voice Emotion Analysis coming soon! This feature will analyze emotional state from voice patterns.');
    }

    function openTherapeuticSupport() {
      alert('üîú Therapeutic Support Center coming soon! Use the chat for evidence-based emotional support.');
    }

    function openEmotionalCoaching() {
      window.location.href = '/emotisense/empathy_training';
    }

    function openWellnessAssessment() {
      window.location.href = '/emotisense/wellness_center';
    }

    function openStressManagement() {
      alert('üîú Advanced Stress Management tools coming soon! Use the chat for stress-related support.');
    }

    // Navigation Menu Toggle
    function toggleNavMenu() {
      const navContent = document.getElementById('nav-content');
      navContent.classList.toggle('show');
    }

    // Enhanced Event Listeners
    document.addEventListener('click', function(e) {
      const navDropdown = document.querySelector('.nav-dropdown');
      const navContent = document.getElementById('nav-content');
      
      if (!navDropdown.contains(e.target)) {
        navContent.classList.remove('show');
      }
    });

    // Close modal when clicking outside
    document.getElementById('emotion-chat-modal').addEventListener('click', function(e) {
      if (e.target === this) {
        closeEmotionChat();
      }
    });

    // Enhanced keyboard shortcuts
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeEmotionChat();
        document.getElementById('nav-content').classList.remove('show');
      }
      
      // Focus on input when modal is open and user starts typing
      const modal = document.getElementById('emotion-chat-modal');
      const input = document.getElementById('emotion-input');
      
      if (modal.style.display === 'block' && 
          e.key.length === 1 && 
          document.activeElement !== input &&
          !e.ctrlKey && !e.altKey && !e.metaKey) {
        input.focus();
      }
    });

    // Initialize EmotiSense Pro
    console.log('üåå EmotiSense Pro v3.0 - Advanced Emotional Intelligence AI Ready');
    console.log('‚ú® Features: Real-time emotion analysis, therapeutic insights, wellness guidance');
    
    // Dynamic emotion indicators animation
    setInterval(() => {
      const indicators = document.querySelectorAll('.emotion-indicator');
      const emotions = ['var(--emotion-joy)', 'var(--emotion-love)', 'var(--emotion-calm)', 'var(--emotion-sadness)', 'var(--emotion-anger)', 'var(--emotion-fear)'];
      
      indicators.forEach(indicator => {
        indicator.style.background = emotions[Math.floor(Math.random() * emotions.length)];
        indicator.style.boxShadow = `0 0 20px ${indicator.style.background}`;
      });
    }, 6000);

    // Add hover effects to feature cards
    document.querySelectorAll('.feature-card').forEach(card => {
      card.addEventListener('mouseenter', function() {
        this.style.transform = 'translateY(-8px) scale(1.03)';
      });
      
      card.addEventListener('mouseleave', function() {
        this.style.transform = 'translateY(0) scale(1)';
      });
    });

    // Add pulse animation to stats
    setInterval(() => {
      document.querySelectorAll('.stat-value').forEach(stat => {
        stat.style.animation = 'statPulse 1s ease-in-out';
        setTimeout(() => {
          stat.style.animation = '';
        }, 1000);
      });
    }, 8000);
  </script>


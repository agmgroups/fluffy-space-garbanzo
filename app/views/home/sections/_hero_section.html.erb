<% content_for :head do %>
  <style>
    .text-gradient {
      background: linear-gradient(to right, #a78bfa, #f472b6, #8b5cf6);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .btn-primary {
      @apply flex items-center justify-center bg-purple-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-purple-700 transition-all duration-300 shadow-lg hover:shadow-purple-500/50;
    }

    .btn-secondary {
      @apply bg-gray-800/60 backdrop-blur-sm text-gray-300 px-6 py-3 rounded-lg font-semibold hover:bg-gray-700 transition-all duration-300 border border-gray-700;
    }

    .pulse-glow {
      animation: pulseGlow 2s infinite ease-in-out;
    }

    @keyframes pulseGlow {
      0%, 100% { box-shadow: 0 0 2px 2px rgba(16, 185, 129, 0.4); }
      50% { box-shadow: 0 0 10px 5px rgba(16, 185, 129, 0); }
    }

    .floating-animation {
      animation: floatUpDown 6s ease-in-out infinite;
    }

    @keyframes floatUpDown {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-20px); }
    }

    /* --- Terminal Styles --- */
    .hero-terminal-window {
      height: 320px !important;
      border: 1px solid rgba(139, 92, 246, 0.3);
      box-shadow: 0 0 30px rgba(139, 92, 246, 0.2), 0 0 15px rgba(0, 0, 0, 0.5) inset;
      position: relative;
      z-index: 10;
    }

    .hero-terminal-content {
      height: 240px !important;
      overflow-y: auto !important;
      overflow-x: hidden !important;
      display: block !important;
      background: linear-gradient(135deg, rgba(0,0,0,0.95) 0%, rgba(20,20,30,0.95) 100%);
      padding: 8px;
      scroll-behavior: smooth;
      position: relative;
      z-index: 11;
      /* Hide scrollbar for all browsers */
      scrollbar-width: none; /* Firefox */
      -ms-overflow-style: none; /* Internet Explorer 10+ */
    }

    /* Hide scrollbar for Webkit browsers (Chrome, Safari, Edge) */
    .hero-terminal-content::-webkit-scrollbar {
      display: none;
    }

    .hero-terminal-line {
      line-height: 1.6;
      margin-bottom: 0.25rem;
      font-family: 'Fira Code', 'Courier New', monospace;
      text-shadow: 0 0 2px rgba(200, 200, 255, 0.1);
      word-wrap: break-word;
      white-space: pre-wrap;
      overflow-wrap: break-word;
    }

    .hero-terminal-cursor {
      display: inline-block;
      background-color: #67e8f9;
      animation: heroTerminalBlink 1.2s step-end infinite;
      width: 9px;
      height: 1.2em;
      margin-left: 4px;
      box-shadow: 0 0 10px #67e8f9;
      transform: translateY(0.2em);
    }

    @keyframes heroTerminalBlink {
      from, to { background-color: transparent; }
      50% { background-color: #67e8f9; }
    }
  </style>
<% end %>

    <!-- Enhanced Hero Section with Canvas and Realistic Terminal -->

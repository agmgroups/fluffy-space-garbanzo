        <!-- Canvas Background -->
        <canvas id="particle-canvas" class="absolute top-0 left-0 w-full h-full z-0"></canvas>

        <div class="container mx-auto px-6 relative z-10">
            <div class="flex flex-col lg:flex-row items-center gap-12">

                <!-- Hero Content -->

            </div>
        </div>
    </section>

    <script>
    document.addEventListener('DOMContentLoaded', function() {

        // --- Particle Canvas Animation ---
        const canvas = document.getElementById('particle-canvas');
        if (canvas) {
            const ctx = canvas.getContext('2d');
            let particles = [];
            
            const setCanvasSize = () => {
                canvas.width = canvas.offsetWidth;
                canvas.height = canvas.offsetHeight;
            };

            class Particle {
                constructor(x, y) {
                    this.x = x;
                    this.y = y;
                    this.size = Math.random() * 2 + 1;
                    this.speedX = Math.random() * 0.8 - 0.4;
                    this.speedY = Math.random() * 0.8 - 0.4;
                    this.color = 'rgba(167, 139, 250, 0.5)';
                }
                update() {
                    if (this.x > canvas.width || this.x < 0) this.speedX *= -1;
                    if (this.y > canvas.height || this.y < 0) this.speedY *= -1;
                    this.x += this.speedX;
                    this.y += this.speedY;
                }
                draw() {
                    ctx.fillStyle = this.color;
                    ctx.beginPath();
                    ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                    ctx.fill();
                }
            }

            function initParticles() {
                particles = [];
                let numberOfParticles = (canvas.width * canvas.height) / 10000;
                for (let i = 0; i < numberOfParticles; i++) {
                    let x = Math.random() * canvas.width;
                    let y = Math.random() * canvas.height;
                    particles.push(new Particle(x, y));
                }
            }

            function connectParticles() {
                for (let a = 0; a < particles.length; a++) {
                    for (let b = a; b < particles.length; b++) {
                        let distance = Math.sqrt(
                            Math.pow(particles[a].x - particles[b].x, 2) +
                            Math.pow(particles[a].y - particles[b].y, 2)
                        );
                        if (distance < 150) {
                            ctx.strokeStyle = `rgba(167, 139, 250, ${1 - distance / 150})`;
                            ctx.lineWidth = 0.5;
                            ctx.beginPath();
                            ctx.moveTo(particles[a].x, particles[a].y);
                            ctx.lineTo(particles[b].x, particles[b].y);
                            ctx.stroke();
                        }
                    }
                }
            }
            
            function animate() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                particles.forEach(p => { p.update(); p.draw(); });
                connectParticles();
                requestAnimationFrame(animate);
            }
            
            setCanvasSize();
            initParticles();
            animate();
            window.addEventListener('resize', () => {
                setCanvasSize();
                initParticles();
            });
        }

        // --- Terminal Typing Animation ---
        const terminal = document.getElementById('terminal-output');
        if (!terminal) return;
        
        const LINES_PER_PAGE = 12; // Number of lines that fit in the fixed height

        const allAgentPages = [
             ['$ systemctl start onelastai.service', '‚óè onelastai.service - OneLastAI Agent Platform', '  Loaded: loaded (/etc/systemd/system/onelastai.service; enabled)', '  Active: <span class="text-green-400">active (running)</span> since ' + new Date().toUTCString(), '$ deploy --all-agents', 'Initializing deployment sequence... 27 agents found.'],
             ['‚úì <span class="text-cyan-400">NeoChat</span>: Universal conversation master... <span class="text-green-400">ONLINE</span>', '‚úì <span class="text-cyan-400">EmotiSense</span>: Emotional intelligence companion... <span class="text-green-400">ONLINE</span>', '‚úì <span class="text-cyan-400">CineGen</span>: Cinematic AI director... <span class="text-green-400">ONLINE</span>', '‚úì <span class="text-cyan-400">ContentCrafter</span>: Master content strategist... <span class="text-green-400">ONLINE</span>', '‚úì <span class="text-cyan-400">Memora</span>: Infinite memory archive... <span class="text-green-400">ONLINE</span>'],
             ['$ get-agent-status --group=security', '‚Üí <span class="text-pink-400">NetScope</span>: Network security specialist... <span class="text-green-400">ACTIVE</span>', '‚Üí <span class="text-pink-400">AuthWise</span>: Cybersecurity guardian... <span class="text-green-400">ACTIVE</span>', '$ get-agent-status --group=data', '‚Üí <span class="text-fuchsia-400">DataVision</span>: Data visualization expert... <span class="text-green-400">ACTIVE</span>', '‚Üí <span class="text-fuchsia-400">DataSphere</span>: Big data analytics engine... <span class="text-green-400">ACTIVE</span>'],
             ['‚úì <span class="text-indigo-400">InfoSeek</span>, <span class="text-indigo-400">AIBlogster</span>, <span class="text-indigo-400">DocuMind</span>... <span class="text-green-400">ONLINE</span>', '‚úì <span class="text-indigo-400">CareBot</span>, <span class="text-indigo-400">PersonaX</span>... <span class="text-green-400">ONLINE</span>', '$ netstat -tlnp | grep onelastai', '<span class="text-gray-400">tcp6  0  0 :::8080 :::* LISTEN  1250/IdeaForge</span>', '<span class="text-gray-400">tcp6  0  0 :::8081 :::* LISTEN  1251/VocaMind</span>', '<span class="text-gray-400">tcp6  0  0 :::8082 :::* LISTEN  1252/TaskMaster</span>'],
             ['$ echo "All 27 AI agents successfully deployed."', '<span class="text-lime-300">All 27 AI agents successfully deployed and operational.</span>', 'System status: <span class="text-green-400">HEALTHY</span>.', 'Awaiting next command...']
        ];
        
        const allLines = allAgentPages.flat();
        let globalLineIndex = 0;
        let currentCharIndex = 0;
        let currentLineEl = null;
        let lineQueue = [];

        function typeLine() {
            if (globalLineIndex >= allLines.length) {
                setTimeout(() => {
                    globalLineIndex = 0;
                    lineQueue = [];
                    terminal.innerHTML = '';
                    typeLine();
                }, 4000); // Pause before restarting loop
                return;
            }

            if (currentCharIndex === 0) {
                if (lineQueue.length >= LINES_PER_PAGE) {
                    const oldestLine = lineQueue.shift();
                    if (oldestLine && oldestLine.parentNode) {
                        oldestLine.parentNode.removeChild(oldestLine);
                    }
                }
                currentLineEl = document.createElement('div');
                currentLineEl.className = 'hero-terminal-line';
                terminal.appendChild(currentLineEl);
                lineQueue.push(currentLineEl);
            }
            
            const lineText = allLines[globalLineIndex];
            const displayText = lineText.slice(0, currentCharIndex + 1);

            let styledText = displayText;
            if (lineText.startsWith('$')) {
                styledText = `<span class="text-yellow-400">$</span> <span class="text-cyan-300">${displayText.slice(2)}</span>`;
            } else if (lineText.startsWith('‚úì')) {
                styledText = `<span class="text-green-400">‚úì</span> ${displayText.slice(1)}`;
            } else if (lineText.startsWith('‚Üí')) {
                styledText = `<span class="text-pink-400">‚Üí</span> ${displayText.slice(1)}`;
            } else if (lineText.startsWith('‚óè')) {
                styledText = `<span class="text-blue-400">‚óè</span> ${displayText.slice(1)}`;
            } else {
                styledText = `<span class="text-gray-300">${displayText}</span>`;
            }

            currentLineEl.innerHTML = styledText + '<span class="hero-terminal-cursor"></span>';
            terminal.scrollTop = terminal.scrollHeight;
            currentCharIndex++;

            if (currentCharIndex > lineText.length) {
                currentLineEl.innerHTML = styledText; 
                currentCharIndex = 0;
                globalLineIndex++;
                
                const isEndOfPage = globalLineIndex > 0 && globalLineIndex % 6 === 0;
                const pauseTime = isEndOfPage ? 1500 : 150;
                setTimeout(typeLine, pauseTime);
            } else {
                setTimeout(typeLine, 25); 
            }
        }
        typeLine();
    });
</script>

        /* Using a standard font for better readability */
        body {
            font-family: 'Inter', sans-serif;
            background-color: #0a0a0a; /* A very dark background for the page */
        }

        /* --- Animations for the background elements --- */

        /* Pulsing animation for neural nodes */
        @keyframes pulse {
            0%, 100% { transform: scale(1); opacity: 0.8; }
            50% { transform: scale(1.5); opacity: 1; }
        }
        .neural-node-pulse {
            animation: pulse 4s infinite ease-in-out;
        }

        /* Flowing animation for neural connections */
        @keyframes flow {
            from { stroke-dashoffset: 200; }
            to { stroke-dashoffset: 0; }
        }
        .neural-connection-flow {
            stroke-dasharray: 100 100;
            animation: flow 8s linear infinite;
        }

        /* Floating animation for quantum particles */
        @keyframes float {
            0% { transform: translateY(0) translateX(0) rotate(0deg); opacity: 0; }
            50% { opacity: 0.4; }
            100% { transform: translateY(-100vh) translateX(var(--x-end)) rotate(360deg); opacity: 0; }
        }
        .quantum-particle {
            position: absolute;
            border-radius: 50%;
            background: radial-gradient(circle, rgba(168, 85, 247, 0.5) 0%, rgba(59, 130, 246, 0.3) 50%, transparent 70%);
            animation: float linear infinite;
        }

        /* Assigning random positions and animation durations to particles */
        .quantum-particle-nexus-1 { width: 5px; height: 5px; left: 10%; animation-duration: 15s; --x-end: 20px; }
        .quantum-particle-nexus-2 { width: 8px; height: 8px; left: 25%; animation-duration: 12s; animation-delay: 2s; --x-end: -15px; }
        .quantum-particle-nexus-3 { width: 4px; height: 4px; left: 40%; animation-duration: 18s; animation-delay: 4s; --x-end: 25px; }
        .quantum-particle-nexus-4 { width: 6px; height: 6px; left: 55%; animation-duration: 10s; animation-delay: 1s; --x-end: -20px; }
        .quantum-particle-nexus-5 { width: 7px; height: 7px; left: 70%; animation-duration: 16s; animation-delay: 3s; --x-end: 10px; }
        .quantum-particle-nexus-6 { width: 5px; height: 5px; left: 85%; animation-duration: 13s; animation-delay: 5s; --x-end: -25px; }
        .quantum-particle-nexus-7 { width: 9px; height: 9px; left: 5%; animation-duration: 20s; animation-delay: 6s; --x-end: 30px; }
        .quantum-particle-nexus-8 { width: 4px; height: 4px; left: 95%; animation-duration: 11s; animation-delay: 7s; --x-end: -10px; }
    </style>

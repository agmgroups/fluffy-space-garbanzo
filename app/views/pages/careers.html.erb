    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', 'Roboto', 'Arial', sans-serif;
      background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 50%, #16213e 100%);
      color: #ffffff;
      min-height: 100vh;
      overflow-x: hidden;
    }

    .hero-section {
      padding: 4rem 2rem 3rem;
      text-align: center;
      background: radial-gradient(ellipse at center, rgba(0, 212, 255, 0.15) 0%, rgba(0, 0, 0, 0.3) 70%);
      border-bottom: 2px solid #00d4ff;
    }

    .hero-title {
      font-size: 3.5rem;
      font-weight: 700;
      margin-bottom: 1rem;
      text-shadow: 0 0 20px #00d4ff;
      background: linear-gradient(45deg, #00d4ff, #0099cc, #66d9ff);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .hero-icon {
      font-size: 4rem;
      margin-bottom: 1rem;
      text-shadow: 0 0 30px #00d4ff;
    }

    .hero-tagline {
      font-size: 1.5rem;
      color: #e0e0e0;
      margin-bottom: 1rem;
      font-weight: 300;
    }

    .hero-subtitle {
      font-size: 1.1rem;
      color: #b8b8b8;
      margin-bottom: 2rem;
    }

    .content-section {
      padding: 3rem 2rem;
      max-width: 1400px;
      margin: 0 auto;
    }

    .jobs-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
      gap: 2rem;
      margin-bottom: 3rem;
    }

    .job-card {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(0, 212, 255, 0.2);
      border-radius: 16px;
      padding: 2.5rem;
      backdrop-filter: blur(10px);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .job-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, #00d4ff, #0099cc, #66d9ff);
    }

    .job-card:hover {
      border-color: #00d4ff;
      transform: translateY(-8px);
      box-shadow: 0 15px 40px rgba(0, 212, 255, 0.25);
    }

    .job-header {
      display: flex;
      align-items: center;
      margin-bottom: 1.5rem;
    }

    .job-icon {
      font-size: 3rem;
      margin-right: 1.5rem;
      text-shadow: 0 0 15px #00d4ff;
    }

    .job-title {
      font-size: 1.8rem;
      font-weight: 700;
      color: #00d4ff;
      margin-bottom: 0.5rem;
    }

    .job-type {
      background: linear-gradient(45deg, #00ff88, #00cc66);
      color: #000;
      padding: 0.3rem 0.8rem;
      border-radius: 20px;
      font-size: 0.8rem;
      font-weight: 600;
      display: inline-block;
      margin-bottom: 1rem;
    }

    .job-description {
      color: #e0e0e0;
      line-height: 1.6;
      margin-bottom: 1.5rem;
      font-size: 1rem;
    }

    .job-requirements {
      margin-bottom: 2rem;
    }

    .job-requirements h4 {
      color: #00d4ff;
      margin-bottom: 0.8rem;
      font-size: 1.1rem;
    }

    .requirements-list {
      list-style: none;
    }

    .requirements-list li {
      color: #b8b8b8;
      margin-bottom: 0.5rem;
      padding-left: 1.5rem;
      position: relative;
      font-size: 0.95rem;
    }

    .requirements-list li::before {
      content: "‚ú¶";
      position: absolute;
      left: 0;
      color: #00d4ff;
    }

    .apply-button {
      width: 100%;
      background: linear-gradient(45deg, #00d4ff, #0099cc);
      color: #ffffff;
      padding: 1rem 2rem;
      border-radius: 12px;
      text-decoration: none;
      font-weight: 600;
      text-align: center;
      display: block;
      transition: all 0.3s ease;
      border: none;
      cursor: pointer;
      font-size: 1rem;
    }

    .apply-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 30px rgba(0, 212, 255, 0.4);
      background: linear-gradient(45deg, #0099cc, #00d4ff);
    }

    .contact-section {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(0, 212, 255, 0.3);
      border-radius: 20px;
      padding: 3rem;
      text-align: center;
      margin-bottom: 3rem;
      backdrop-filter: blur(10px);
    }

    .contact-title {
      font-size: 2.5rem;
      color: #00d4ff;
      margin-bottom: 1.5rem;
      text-shadow: 0 0 15px #00d4ff;
    }

    .contact-description {
      font-size: 1.2rem;
      color: #e0e0e0;
      margin-bottom: 2.5rem;
      line-height: 1.6;
    }

    .contact-methods {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      margin-bottom: 2rem;
    }

    .contact-method {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(0, 212, 255, 0.2);
      border-radius: 15px;
      padding: 2rem;
      transition: all 0.3s ease;
    }


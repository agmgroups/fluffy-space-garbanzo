            <div class="upload-subtext">Resume, Portfolio, Cover Letter (PDF, DOC, DOCX - Max 10MB each)</div>
          </div>
          <input type="file" id="fileInput" class="file-input" multiple accept=".pdf,.doc,.docx,.txt" onchange="handleFileSelect(event)">
          <div class="uploaded-files" id="uploadedFiles"></div>
        </div>
        
        <button type="submit" class="submit-application">
          üì§ Submit Application
        </button>
      </form>
    </div>
  </div>

  <script>
    let currentJobTitle = '';
    let uploadedFiles = [];

    function openApplicationModal(jobTitle, jobDescription) {
      currentJobTitle = jobTitle;
      document.getElementById('modalJobTitle').textContent = `Apply for ${jobTitle}`;
      document.getElementById('modalJobDescription').textContent = jobDescription;
      document.getElementById('applicationModal').classList.add('active');
      document.body.style.overflow = 'hidden';
    }

    function closeApplicationModal() {
      document.getElementById('applicationModal').classList.remove('active');
      document.body.style.overflow = 'auto';
      // Reset form
      document.getElementById('applicationForm').reset();
      uploadedFiles = [];
      document.getElementById('uploadedFiles').innerHTML = '';
    }

    // Close modal when clicking outside
    document.getElementById('applicationModal').addEventListener('click', function(e) {
      if (e.target === this) {
        closeApplicationModal();
      }
    });

    // Handle file upload
    function handleFileSelect(event) {
      const files = event.target.files;
      for (let file of files) {
        if (file.size > 10 * 1024 * 1024) { // 10MB limit
          alert(`File "${file.name}" is too large. Maximum size is 10MB.`);
          continue;
        }
        
        if (uploadedFiles.length >= 5) {
          alert('Maximum 5 files allowed.');
          break;
        }
        
        uploadedFiles.push(file);
        displayUploadedFile(file);
      }
    }

    function displayUploadedFile(file) {
      const fileContainer = document.getElementById('uploadedFiles');
      const fileItem = document.createElement('div');
      fileItem.className = 'file-item';
      fileItem.innerHTML = `
        <span class="file-name">üìÑ ${file.name} (${(file.size / 1024 / 1024).toFixed(2)} MB)</span>
        <button type="button" class="file-remove" onclick="removeFile('${file.name}')">&times;</button>
      `;
      fileContainer.appendChild(fileItem);
    }

    function removeFile(fileName) {
      uploadedFiles = uploadedFiles.filter(file => file.name !== fileName);
      const fileItems = document.querySelectorAll('.file-item');
      fileItems.forEach(item => {
        if (item.querySelector('.file-name').textContent.includes(fileName)) {
          item.remove();
        }
      });
    }

    // Drag and drop functionality
    const fileUploadArea = document.getElementById('fileUploadArea');
    
    fileUploadArea.addEventListener('dragover', function(e) {
      e.preventDefault();
      this.classList.add('dragover');
    });
    
    fileUploadArea.addEventListener('dragleave', function(e) {
      e.preventDefault();
      this.classList.remove('dragover');
    });
    
    fileUploadArea.addEventListener('drop', function(e) {
      e.preventDefault();
      this.classList.remove('dragover');
      
      const files = e.dataTransfer.files;
      for (let file of files) {
        if (file.size > 10 * 1024 * 1024) {
          alert(`File "${file.name}" is too large. Maximum size is 10MB.`);
          continue;
        }
        
        if (uploadedFiles.length >= 5) {
          alert('Maximum 5 files allowed.');
          break;
        }
        
        uploadedFiles.push(file);
        displayUploadedFile(file);
      }
    });

    // Handle form submission
    document.getElementById('applicationForm').addEventListener('submit', function(e) {
      e.preventDefault();
      
      const formData = new FormData();
      const name = document.getElementById('applicantName').value;
      const email = document.getElementById('applicantEmail').value;
      const phone = document.getElementById('applicantPhone').value;
      const location = document.getElementById('applicantLocation').value;
      const coverLetter = document.getElementById('coverLetter').value;
      const experience = document.getElementById('experience').value;
      
      if (!name || !email || !coverLetter) {
        alert('Please fill in all required fields.');
        return;
      }
      
      // Create email content
      const emailSubject = `Job Application: ${currentJobTitle} - ${name}`;
      const emailBody = `
NEW JOB APPLICATION
===================

Position: ${currentJobTitle}
Applicant: ${name}
Email: ${email}
Phone: ${phone || 'Not provided'}
Location: ${location || 'Not provided'}

WHY INTERESTED:
${coverLetter}

RELEVANT EXPERIENCE:
${experience || 'Not provided'}

ATTACHED FILES: ${uploadedFiles.length} file(s)
${uploadedFiles.map(file => `- ${file.name} (${(file.size / 1024 / 1024).toFixed(2)} MB)`).join('\n')}

Application submitted via OneLastAI Careers page.
      `;
      
      // For now, we'll create a mailto link with the application details
      // In a production environment, you would send this via a backend service
      const mailtoLink = `mailto:job@onelastai.com?subject=${encodeURIComponent(emailSubject)}&body=${encodeURIComponent(emailBody)}`;
      
      // Show success message
      alert(`Thank you for your application, ${name}! Your email client will open to send your application. Please attach your uploaded files manually to the email.`);
      
      // Open email client
      window.location.href = mailtoLink;
      
      // Close modal
      closeApplicationModal();
    });
  </script>
</body>
</html>

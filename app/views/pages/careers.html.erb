      overflow-y: auto;
      position: relative;
      box-shadow: 0 20px 60px rgba(0, 212, 255, 0.3);
      animation: slideUp 0.3s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    @keyframes slideUp {
      from { transform: translateY(50px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }

    .modal-close {
      position: absolute;
      top: 1rem;
      right: 1rem;
      background: none;
      border: none;
      color: #ffffff;
      font-size: 2rem;
      cursor: pointer;
      transition: color 0.3s ease;
    }

    .modal-close:hover {
      color: #00d4ff;
    }

    .modal-title {
      font-size: 2rem;
      color: #00d4ff;
      margin-bottom: 1rem;
      text-align: center;
    }

    .modal-subtitle {
      color: #e0e0e0;
      text-align: center;
      margin-bottom: 2rem;
      font-size: 1.1rem;
    }

    .application-form {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .form-group {
      display: flex;
      flex-direction: column;
    }

    .form-label {
      color: #00d4ff;
      font-weight: 600;
      margin-bottom: 0.5rem;
      font-size: 1rem;
    }

    .form-input, .form-textarea {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(0, 212, 255, 0.3);
      border-radius: 10px;
      padding: 1rem;
      color: #ffffff;
      font-size: 1rem;
      transition: all 0.3s ease;
    }

    .form-input:focus, .form-textarea:focus {
      outline: none;
      border-color: #00d4ff;
      box-shadow: 0 0 10px rgba(0, 212, 255, 0.3);
    }

    .form-textarea {
      min-height: 120px;
      resize: vertical;
    }

    .file-upload-area {
      border: 2px dashed rgba(0, 212, 255, 0.5);
      border-radius: 15px;
      padding: 2rem;
      text-align: center;
      background: rgba(255, 255, 255, 0.05);
      transition: all 0.3s ease;
      cursor: pointer;
    }

    .file-upload-area:hover {
      border-color: #00d4ff;
      background: rgba(0, 212, 255, 0.1);
    }

    .file-upload-area.dragover {
      border-color: #00ff88;
      background: rgba(0, 255, 136, 0.1);
    }

    .file-input {
      display: none;
    }

    .upload-icon {
      font-size: 3rem;
      color: #00d4ff;
      margin-bottom: 1rem;
    }

    .upload-text {
      color: #e0e0e0;
      font-size: 1.1rem;
      margin-bottom: 0.5rem;
    }

    .upload-subtext {
      color: #b8b8b8;
      font-size: 0.9rem;
    }

    .uploaded-files {
      margin-top: 1rem;
    }

    .file-item {
      background: rgba(0, 212, 255, 0.1);
      border: 1px solid rgba(0, 212, 255, 0.3);
      border-radius: 10px;
      padding: 0.8rem;
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .file-name {
      color: #e0e0e0;
      font-size: 0.9rem;
    }

    .file-remove {
      background: #ff6b6b;
      border: none;
      color: white;
      border-radius: 50%;
      width: 24px;
      height: 24px;
      cursor: pointer;
      font-size: 0.8rem;
    }

    .submit-application {
      background: linear-gradient(45deg, #00d4ff, #0099cc);
      color: #ffffff;
      padding: 1.2rem 2rem;
      border-radius: 12px;
      border: none;
      font-weight: 600;
      font-size: 1.1rem;
      cursor: pointer;
      transition: all 0.3s ease;
      margin-top: 1rem;
    }

    .submit-application:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 30px rgba(0, 212, 255, 0.4);
    }

    .submit-application:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }

    @media (max-width: 768px) {
      .hero-title {
        font-size: 2.5rem;
      }
      
      .jobs-grid {
        grid-template-columns: 1fr;
      }
      
      .contact-methods {
        grid-template-columns: 1fr;
      }
      
      .job-card {
        padding: 2rem;
      }

      .application-modal {
        padding: 2rem;
        margin: 1rem;
      }

      .modal-title {
        font-size: 1.5rem;
      }
    }
  </style>
</head>


      border-color: #00d4ff;
      transform: translateY(-3px);
      box-shadow: 0 8px 25px rgba(0, 212, 255, 0.2);
    }

    .contact-icon {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      text-shadow: 0 0 10px #00d4ff;
    }

    .contact-label {
      font-size: 1.2rem;
      font-weight: 600;
      color: #00d4ff;
      margin-bottom: 0.5rem;
    }

    .contact-info {
      color: #e0e0e0;
      font-size: 1rem;
      word-break: break-all;
    }

    .contact-link {
      color: #66d9ff;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .contact-link:hover {
      color: #00d4ff;
      text-decoration: underline;
    }

    .back-button {

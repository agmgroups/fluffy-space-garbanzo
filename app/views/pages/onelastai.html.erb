  <script>
    const leftPanel = document.getElementById("left-panel");
    const rightPanel = document.getElementById("right-panel");
    const topPanel = document.getElementById("top-panel");
    const bottomPanel = document.getElementById("bottom-panel");
    const terminal = document.getElementById("terminal");
    const terminalInput = document.getElementById("terminal-input");
    const terminalOutput = document.getElementById("terminal-output");

    // Support form elements
    const liveChatBtn = document.getElementById('live-chat-btn');
    const sendMailBtn = document.getElementById('send-mail-btn');
    const supportTicketBtn = document.getElementById('support-ticket-btn');
    const supportFormContainer = document.getElementById('support-form-container');
    const formTitle = document.getElementById('form-title');
    const formDescription = document.getElementById('form-description');
    const emailFields = document.getElementById('email-fields');
    const priorityField = document.getElementById('priority-field');
    const messageArea = document.getElementById('message-area');
    const formButtons = document.getElementById('form-buttons');
    const sendBtn = document.getElementById('send-btn');
    const cancelBtn = document.getElementById('cancel-btn');

    let currentMode = null;
    let chatMode = false;

    // Default state: all 3 panels open
    leftPanel.classList.remove("-translate-x-full");
    rightPanel.classList.remove("translate-x-full");
    topPanel.classList.remove("slide-up");

    const addToTerminal = (message, className = '') => {
      const p = document.createElement('p');
      p.innerHTML = message;
      if (className) p.className = className;
      terminalOutput.appendChild(p);
      terminalOutput.scrollTop = terminalOutput.scrollHeight;
    };

    const resetForm = () => {
      supportFormContainer.classList.add('hidden');
      emailFields.classList.add('hidden');
      priorityField.classList.add('hidden');
      messageArea.classList.add('hidden');
      formButtons.classList.add('hidden');
      currentMode = null;
      chatMode = false;
      
      // Clear form fields
      document.getElementById('sender-name').value = '';
      document.getElementById('sender-email').value = '';
      document.getElementById('subject').value = '';
      document.getElementById('message-area').value = '';
      document.getElementById('priority').value = 'medium';
      
      terminalInput.placeholder = 'Type your command or message...';
    };

    // Support button handlers
    liveChatBtn.addEventListener('click', () => {
      resetForm();
      currentMode = 'live-chat';
      chatMode = true;
      formTitle.textContent = 'ðŸ’¬ Live Chat';
      formDescription.textContent = 'Live chat with support team';
      supportFormContainer.classList.remove('hidden');
      
      addToTerminal('&gt; LIVE CHAT MODE ACTIVATED', 'text-green-400');
      addToTerminal('&gt; Connected to support agent. Type messages below.', 'text-cyan-400');
      addToTerminal('&gt; Agent: Hello! How can I help you today?', 'text-yellow-400');
      
      terminalInput.placeholder = 'Type your message to the support agent...';
      terminalInput.focus();
    });

    sendMailBtn.addEventListener('click', () => {
      resetForm();
      currentMode = 'send-mail';
      formTitle.textContent = 'ðŸ“§ Send Mail';
      formDescription.textContent = 'Send email to support team';
      supportFormContainer.classList.remove('hidden');
      emailFields.classList.remove('hidden');
      messageArea.classList.remove('hidden');
      formButtons.classList.remove('hidden');
      
      addToTerminal('&gt; EMAIL COMPOSER ACTIVATED', 'text-green-400');
      addToTerminal('&gt; Fill in the form and click Send.', 'text-cyan-400');
    });

    supportTicketBtn.addEventListener('click', () => {
      resetForm();
      currentMode = 'support-ticket';
      formTitle.textContent = 'ðŸŽ« Support Ticket';
      formDescription.textContent = 'Create detailed support ticket';
      supportFormContainer.classList.remove('hidden');
      emailFields.classList.remove('hidden');
      priorityField.classList.remove('hidden');
      messageArea.classList.remove('hidden');
      formButtons.classList.remove('hidden');
      
      addToTerminal('&gt; SUPPORT TICKET SYSTEM ACTIVATED', 'text-green-400');
      addToTerminal('&gt; Fill in the form to create your ticket.', 'text-cyan-400');
    });

    // Send button handler
    sendBtn.addEventListener('click', () => {
      const name = document.getElementById('sender-name').value;
      const email = document.getElementById('sender-email').value;
      const subject = document.getElementById('subject').value;
      const message = document.getElementById('message-area').value;
      const priority = document.getElementById('priority').value;

      if (currentMode === 'send-mail') {
        if (!name || !email || !subject || !message) {
          addToTerminal('&gt; ERROR: Please fill in all required fields.', 'text-red-500');
          return;
        }
        
        addToTerminal(`&gt; SENDING EMAIL...`, 'text-yellow-400');
        addToTerminal(`&gt; From: ${name} &lt;${email}&gt;`, 'text-gray-400');
        addToTerminal(`&gt; Subject: ${subject}`, 'text-gray-400');
        addToTerminal(`&gt; Email sent successfully to mail@onelastai.com`, 'text-green-400');
        
        setTimeout(() => {
          window.location.href = `mailto:mail@onelastai.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(`Name: ${name}\\nEmail: ${email}\\n\\nMessage:\\n${message}`)}`;
        }, 1000);
        
      } else if (currentMode === 'support-ticket') {
        if (!name || !email || !subject || !message) {
          addToTerminal('&gt; ERROR: Please fill in all required fields.', 'text-red-500');
          return;
        }
        
        addToTerminal(`&gt; CREATING SUPPORT TICKET...`, 'text-yellow-400');
        addToTerminal(`&gt; Priority: ${priority.toUpperCase()}`, 'text-gray-400');
        addToTerminal(`&gt; Ticket #${Math.floor(Math.random() * 100000)} created successfully`, 'text-green-400');
        addToTerminal(`&gt; Ticket details sent to mail@onelastai.com`, 'text-cyan-400');
        
        setTimeout(() => {
          const ticketBody = `Support Ticket - Priority: ${priority}\\n\\nName: ${name}\\nEmail: ${email}\\n\\nIssue Description:\\n${message}\\n\\nSteps to reproduce:\\n1. \\n2. \\n3. \\n\\nExpected behavior:\\n\\nActual behavior:\\n\\nAdditional information:`;
          window.location.href = `mailto:mail@onelastai.com?subject=${encodeURIComponent(`Support Ticket - ${subject}`)}&body=${encodeURIComponent(ticketBody)}`;
        }, 1000);
      }
      
      resetForm();
    });

    // Cancel button handler
    cancelBtn.addEventListener('click', () => {
      addToTerminal(`&gt; ${currentMode?.toUpperCase().replace('-', ' ')} CANCELLED`, 'text-gray-400');
      resetForm();
    });

    // Toggle buttons
    document.getElementById("toggle-left-panel").onclick = () => {
      leftPanel.classList.toggle("-translate-x-full");
      checkTerminal();
    };

    document.getElementById("toggle-right-panel").onclick = () => {
      rightPanel.classList.toggle("translate-x-full");
      checkTerminal();
    };

    // Start Setting â†’ close all panels
    document.getElementById("start-setting").onclick = () => {
      leftPanel.classList.add("-translate-x-full");
      rightPanel.classList.add("translate-x-full");
      topPanel.classList.add("slide-up");
      bottomPanel.classList.add("translate-y-full");
      terminal.classList.remove("hidden-terminal");
    };

    // Check if 3 panels open â†’ hide terminal
    function checkTerminal() {
      const isLeftOpen = !leftPanel.classList.contains("-translate-x-full");
      const isRightOpen = !rightPanel.classList.contains("translate-x-full");
      const isTopOpen = !topPanel.classList.contains("slide-up");
      if (isLeftOpen && isRightOpen && isTopOpen) {
        terminal.classList.add("hidden-terminal");
      } else {
        terminal.classList.remove("hidden-terminal");
      }
    }

    // Terminal input logic
    terminalInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        const command = terminalInput.value.trim();
        
        if (chatMode && currentMode === 'live-chat') {
          // Handle live chat messages
          if (command) {
            addToTerminal(`&gt; You: ${command}`, 'text-white');
            
            // Simulate agent response
            setTimeout(() => {
              const responses = [
                "I understand your concern. Let me help you with that.",
                "Could you provide more details about this issue?",
                "I'll escalate this to our technical team for review.",
                "Is there anything else I can help you with?",
                "Thank you for contacting OneLastAI support!",
                "Let me check our knowledge base for a solution.",
                "I'm processing your request now. Please hold on.",
                "That's a great question! Here's what I can tell you..."
              ];
              const randomResponse = responses[Math.floor(Math.random() * responses.length)];
              addToTerminal(`&gt; Agent: ${randomResponse}`, 'text-yellow-400');
            }, 1000 + Math.random() * 2000);
          }
        } else {
          // Handle regular commands
          if (command) {
            addToTerminal(`&gt; ${command}`);
            handleCommand(command);
          }
        }

        terminalInput.value = '';
      }
    });

    function handleCommand(command) {
      const output = document.createElement('p');
      output.classList.add('text-cyan-400');
      let response = '';

      switch (command.toLowerCase()) {
        case 'help':
          response = 'Available commands: help, clear, date, status, contact\\nSupport options: Open left panel for Live Chat, Send Mail, or Support Ticket';
          break;
        case 'clear':
          terminalOutput.innerHTML = '<p class="text-green-400 glow-green">Welcome to OneLastAI Support Terminal!</p><p class="text-cyan-400 glow-cyan">&gt; Open left panel for Live Chat, Send Mail, or Support Ticket options.</p><p class="text-gray-500">&gt; Type \'help\' for available commands.</p>';
          return;
        case 'date':
          response = new Date().toLocaleString();
          break;
        case 'status':
          response = 'OneLastAI Support Terminal - All systems operational';
          break;
        case 'contact':
          response = 'Email: mail@onelastai.com | Open left panel for support options';
          break;
        default:
          response = `Command not found: ${command}. Type 'help' for available commands.`;
          output.classList.remove('text-cyan-400');
          output.classList.add('text-red-500');
      }
      output.textContent = response;
      terminalOutput.appendChild(output);
      terminalOutput.scrollTop = terminalOutput.scrollHeight;
    }
    
    // Initial check
    checkTerminal();
  </script>
</body>
